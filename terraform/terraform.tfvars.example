# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your actual values
# DO NOT commit terraform.tfvars to git (contains secrets)

# Project configuration
project_name = "prompt-guessr"
environment  = "production"
aws_region   = "us-east-1"

# SSH access
# Name of SSH key pair already created in AWS EC2
ssh_key_name = "prompt-guessr-key"

# Your public IP address for SSH access (CIDR notation)
# Find your IP: curl ifconfig.me
# Example: "203.0.113.50/32"
allowed_ssh_cidr = "YOUR_IP_ADDRESS/32"

# GitHub configuration
# Format: "owner/repository"
github_repository = "yourusername/prompt-guessr"

# GitHub personal access token
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, admin:repo_hook
github_token = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Custom domain configuration (optional but recommended for HTTPS)
# Backend API domain - will get SSL certificate
api_domain_name = "api.prompt-guessr.com"

# Frontend domain (optional) - for custom Amplify domain
frontend_domain_name = "prompt-guessr.com"
# Or use www subdomain: "www.prompt-guessr.com"
# Leave empty to use Amplify's default domain
